<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Templates -->
    <DataTemplate x:Key="HighPriorityDataTemplate">
        <Border Background="LightCoral" Padding="5">
            <StackPanel>
                <TextBlock Text="{Binding Title}" FontWeight="Bold"></TextBlock>
                <TextBlock Text="{Binding Description}"></TextBlock>
            </StackPanel>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="MediumPriorityDataTemplate">
        <Border Background="Khaki" Padding="5">
            <StackPanel>
                <TextBlock Text="{Binding Title}" FontWeight="Bold"></TextBlock>
                <TextBlock Text="{Binding Description}"></TextBlock>
            </StackPanel>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="LowPriorityDataTemplate">
        <Border Background="LightGreen" Padding="5">
            <StackPanel>
                <TextBlock Text="{Binding Title}" />
                <TextBlock Text="{Binding Description}" />
            </StackPanel>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="NormalPriorityDataTemplate">
        <Border Background="Wheat" Padding="5">
            <StackPanel>
                <TextBlock Text="{Binding Title}" />
                <TextBlock Text="{Binding Description}" />
            </StackPanel>
        </Border>
    </DataTemplate>

</ResourceDictionary>